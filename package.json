{
  "name": "",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "build:prod": "NODE_ENV=production react-router build",
    "build:extension": "vite build --mode extension",
    "build:extension:prod": "NODE_ENV=production vite build --mode extension",
    "build:analyze": "ANALYZE=true NODE_ENV=production react-router build",
    "build:analyze:extension": "ANALYZE=true NODE_ENV=production vite build --mode extension",
    "build:all": "npm run build:prod && npm run build:extension:prod",
    "build:validate": "npm run build:prod && npm run validate:build",
    "dev": "react-router dev",
    "dev:extension": "vite --mode extension",
    "start": "react-router-serve ./build/server/index.js",
    "typecheck": "react-router typegen && tsc",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "validate": "npm run typecheck && npm run lint",
    "validate:build": "node scripts/validate-build.js",
    "clean": "rm -rf build dist-extension node_modules/.vite",
    "preinstall": "npm run clean",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:run:component": "cypress run --component",
    "cypress:open:component": "cypress open --component",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open"
  },
  "dependencies": {
    "@react-router/node": "^7.7.1",
    "@react-router/serve": "^7.7.1",
    "@reduxjs/toolkit": "^2.8.2",

    "bip39": "^3.1.0",
    "buffer": "^6.0.3",
    "ethers": "^6.15.0",
    "isbot": "^5.1.27",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-redux": "^9.2.0",
    "react-router": "^7.7.1"
  },
  "devDependencies": {
    "@cypress/react": "^9.0.1",
    "@eslint/js": "^9.33.0",
    "@react-router/dev": "^7.7.1",
    "@types/cypress": "^0.1.6",
    "@types/node": "^20.19.11",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "cypress": "^14.5.4",
    "eslint": "^9.33.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "sass": "^1.90.0",
    "terser": "^5.43.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.3",
    "vite-bundle-analyzer": "^1.2.1",
    "vite-plugin-static-copy": "^3.1.1",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
